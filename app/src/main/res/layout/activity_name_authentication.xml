<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.NameAuthenticationActivity">

    <include layout="@layout/my_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:text="姓名"
                android:textColor="@color/black33"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:background="@null"
                android:hint="请输入真实姓名" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:text="身份证号"
                android:textColor="@color/black33"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:background="@null"
                android:hint="请输入18位身份证号" />

            <!--    <View-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="1dp"-->
            <!--        android:layout_marginLeft="20dp"-->
            <!--        android:background="@color/line_color" />-->

            <!--    <TextView-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_marginLeft="20dp"-->
            <!--        android:layout_marginTop="24dp"-->
            <!--        android:text="有效期"-->
            <!--        android:textColor="@color/black33"-->
            <!--        android:textSize="13sp" />-->

            <!--    <EditText-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="50dp"-->
            <!--        android:layout_marginLeft="20dp"-->
            <!--        android:layout_marginTop="7dp"-->
            <!--        android:background="@null"-->
            <!--        android:hint="请输入身份证有效期" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:text="身份证正上传"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_sfzzm"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="5dp"
                    android:text="1、请上传彩色扫描件或照;\n2、图片大小不超过2M；\n3、支付PNG、JPG、JPEG格式，建议PNG格式。"
                    android:textColor="#ff333333"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_card1"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_20dp_rectangle_f5f5f5" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:text="身份证反上传"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_sfzfm"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="5dp"
                    android:text="1、请上传彩色扫描件或照;\n2、图片大小不超过2M；\n3、支付PNG、JPG、JPEG格式，建议PNG格式。"
                    android:textColor="#ff333333"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_card2"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_20dp_rectangle_f5f5f5" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_btn2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_radius_theme_22dp"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>