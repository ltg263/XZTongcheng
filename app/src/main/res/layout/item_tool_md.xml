<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_ddmh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:text="2020-06-25"
        android:textColor="@color/gray99"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_jjf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ddmh">


        <TextView
            android:id="@+id/tv_name_j"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_10"
            android:text="寄件人：张三"
            android:textColor="@color/black33"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_phone_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ddmh"
            android:paddingStart="@dimen/dp_10"
            android:text="电话：13112345678"
            android:textColor="@color/black33"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_sjf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_jjf"
        android:layout_marginTop="@dimen/dp_10">


        <TextView
            android:id="@+id/tv_name_s"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_10"
            android:text="收件人：张三"
            android:textColor="@color/black33"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_phone_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ddmh"
            android:paddingStart="@dimen/dp_10"
            android:text="电话：13112345678"
            android:textColor="@color/black33"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_isprint"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_circle_no" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_sjf"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/line_color" />
</RelativeLayout>