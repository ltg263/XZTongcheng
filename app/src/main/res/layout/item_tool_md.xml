<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shape_radius_white_12"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_ydmh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="2020-06-25"
        android:textColor="@color/gray99"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_ddmh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/tv_ydmh"
        android:text="2020-06-25"
        android:textColor="@color/gray99"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_jjf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ddmh"
        android:layout_marginEnd="30dp">


        <TextView
            android:id="@+id/tv_name_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_10"
            android:text="寄件人：张三"
            android:textColor="@color/black33"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_phone_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ddmh"
            android:paddingStart="@dimen/dp_10"
            android:text="电话：13112345678"
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dz_j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_jjf"
        android:layout_marginEnd="30dp"
        android:paddingStart="@dimen/dp_10"
        android:text="地址：13112345678"
        android:textColor="@color/black33"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/ll_sjf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dz_j"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp">


        <TextView
            android:id="@+id/tv_name_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_10"
            android:text="收件人：张三"
            android:textColor="@color/black33"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_phone_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ddmh"
            android:paddingStart="@dimen/dp_10"
            android:text="电话：13112345678"
            android:textColor="@color/black33"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dz_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_sjf"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="@dimen/dp_10"
        android:text="地址：13112345678"
        android:textColor="@color/black33"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_isprint"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:src="@mipmap/ic_circle_no"
        android:visibility="invisible" />

</RelativeLayout>