<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.DepositActivity">

    <include layout="@layout/my_toolbar" android:id="@+id/include"/>

    <LinearLayout
        android:background="@drawable/shape_radius_white"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selectCard"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:textColor="@color/black33"
            android:paddingEnd="10dp"
            android:drawableEnd="@mipmap/ic_right_gray"
            android:text="选择提现到账卡"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black66"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:text="提现金额"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:layout_gravity="bottom"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black33"/>
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="30sp"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:textColor="@color/black33"
                android:layout_marginStart="5dp"
                android:background="@color/white"/>
        </LinearLayout>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
        <LinearLayout
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额：￥0"/>
            <TextView
                android:id="@+id/allDeposit"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black33"
                android:text="全部提现"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_radius_theme_full"
        android:text="提现"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/slogon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black66"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text=""/>

</LinearLayout>