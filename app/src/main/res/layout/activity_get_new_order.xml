<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e6000000"
    tools:context=".ui.activity.GetNewOrderActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/cn_q"
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="￥"
                    android:textColor="@color/color_ff0000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="86dp"
                    android:layout_height="73dp"
                    android:layout_alignBaseline="@id/cn_q"
                    android:layout_toRightOf="@id/cn_q"
                    android:text="2.0"
                    android:textColor="@color/color_ff0000"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:text="急件"
                    android:textColor="@color/color_ff0000"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_status"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13分钟内"
                        android:textColor="@color/color_fea41d"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送达"
                        android:textColor="@color/color_666666" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e8e8e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="取"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_get_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0.4km"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_get_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等级登记开了多久空了就"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_get_address2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="等级登记开了多久空了就"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="送"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_to_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0.4km"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_to_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等级登记开了多等级登记开了久空了就"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_to_address2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="等级登记开了多久空了就"
                        android:textColor="@color/color_666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/line_color"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="帮买:咖啡、绿茶"
                android:textSize="12sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/cardview"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="89dp"
        android:background="@drawable/shape_oval_white"
        android:gravity="center"
        android:text="拒绝"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/cardview"
        android:layout_alignParentRight="true"
        android:layout_marginTop="89dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/shape_oval_white"
        android:gravity="center"
        android:text="10件"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_below="@id/cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/shape_oval_theme_color"
        android:gravity="center"
        android:text="接收\n3s"
        android:textColor="@color/corlor_e6ffffff"
        android:textSize="20sp" />

</RelativeLayout>